<div style="text-align:center"><h3>新增课程</h3></div>
#if($message)
<div class="alert alert-success alert-dismissable">
    	<button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
    	$!{message}
</div>
#end
<form class="form-horizontal" role="form" action="${rc.contextPath}/course/save" method="post">
  <div class="control-group">
    <label class="col-sm-2 control-label">课程</label>
    <div class="controls">
      <input type="text" name="name" class="input-xlarge" placeholder="课程"/>
    </div>
  </div>
  <div class="control-group">
    <div class="col-sm-offset-2 controls">
      <button type="submit" class="btn btn-default">新增</button>
    </div>
  </div>
</form>
