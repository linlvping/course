<script type="text/javascript"> 
$(document).ready(function(){
	$('#profileTable').dataTable({   
		"language" : lang,
		"destroy": true,
		"processing": true,
		"serverSide" : false,    
		"ajax": "${rc.contextPath}/schedule/student?name=$!{student.name}&rand="+Math.random(),
		"columns": [
            { "data": "date" },
            { "data": "teacher" },
            { "data": "course" },
            { "data": "time" },
            { "data": "statusDisplay" }
        ]
	});
});
</script>
