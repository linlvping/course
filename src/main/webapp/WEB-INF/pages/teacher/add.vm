<div style="text-align:center"><h3>新增老师</h3></div>
<form class="form-horizontal" role="form" action="${rc.contextPath}/teacher/save" method="post">
  <div class="control-group">
    <label class="col-sm-2 control-label">姓名</label>
    <div class="controls">
      <input type="text" name="name" class="input-xlarge" placeholder="老师姓名"/>
    </div>
  </div>
  <div class="control-group">
    <label class="col-sm-2 control-label">联系电话</label>
    <div class="controls">
      <input type="text" name="phone" class="input-xlarge" placeholder="联系电话"/>
    </div>
  </div>
  <div class="control-group">
    <label class="col-sm-2 control-label">教学科目</label>
    <div class="controls">
      <input type="text" name="course" class="input-xlarge" placeholder="教学科目"/>
    </div>
  </div>
  <div class="control-group">
    <div class="col-sm-offset-2 controls">
      <button type="submit" class="btn btn-default">新增</button>
    </div>
  </div>
</form>
